{
  "MySqlConnection": {
    // host.docker.internal is because we are running the application in a docker container, and
    // we want to connect to the MySQL database running on the host machine. 
    // So we use host.docker.internal to connect to the host machine (outside the container)
    // If you are running the application outside of a docker container, you can use localhost
    "MySQlConnectionString": "Server=host.docker.internal;DataBase=librarymanager;Uid=root;Pwd=;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
